            <Label layoutX="39.0" layoutY="30.0" text="Artatawe" textFill="aliceblue" fx:id="title">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>

             <!-- Edit Profile Button: -->
            <Button layoutX="10.0" layoutY="203.0" mnemonicParsing="false" onAction="#editAction" prefHeight="23.0" prefWidth="139.0" style="-fx-background-color: #1D2026;" text="Edit Profile" textFill="WHITE" />
