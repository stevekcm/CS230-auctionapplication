            <Button fx:id="artworkBtn" layoutX="19.0" layoutY="239.0" mnemonicParsing="false" onAction="#artworkAction" prefHeight="23.0" prefWidth="124.0" style="-fx-background-color: #1D2026;" text="Artwork" textFill="WHITE" />
