      <AnchorPane minWidth="158" prefHeight="500.0" prefWidth="158.0" style="-fx-background-color: #1D2026;">

         <children>
             <!-- Browser Button: -->
            <Button fx:id="profileBtn" layoutX="9.0" layoutY="167.0" mnemonicParsing="false" onAction="#profileAction" prefHeight="23.0" prefWidth="147.0" style="-fx-background-color: #1D2026;" text="Profile" textFill="WHITE" />

