      </AnchorPane>
      <ChoiceBox fx:id="choiceBox" layoutX="559.0" layoutY="14.0" onAction="#showArt" prefHeight="23.0" prefWidth="124.0" style="-fx-background-color: #1D2026;" />
   </children>
   <children>
     <ListView fx:id="listView" layoutX="185.0" layoutY="46.0" prefHeight="442.0" prefWidth="498.0"  />
   </children>

</AnchorPane>
